<Window x:Class="HändlerEditor.XAML.Message"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Message" Height="200" Width="500" SizeToContent="WidthAndHeight">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        
        <TextBlock Name="MessageText" Grid.Row="0" Margin="11" />
        
        <StackPanel Grid.Row="1" HorizontalAlignment="Right" Orientation="Horizontal" Margin="5" >
            <Button Name="YesButton" Click="YesButtonClick" Width="100" Margin="4" Visibility="Collapsed">Yes</Button>
            <Button Name="NoButton" Click="NoButtonClick" Width="100" Margin="4" Visibility="Collapsed">No</Button>
            <Button Name="OkButton" Click="OkButtonClick" Width="100" Margin="4" Visibility="Collapsed">Ok</Button>
            <Button Name="CancelButton" Click="CancelButtonClick" Width="100" Margin="4" Visibility="Collapsed">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
